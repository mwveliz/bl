<script>
    $(document).ready(function(){
        $('a.a_show').on('click',function(e) {
                    e.preventDefault();
                    var id_client=$(this).attr("param");
                    $.ajax({
                        url: "{{ path('client_ajaxshow') }}",
                        data: 'id='+id_client,
                        success: function(plantilla){
                        $('#show').html(plantilla);    
                        }
                    });                    
    
                        
             }); 
        
    });
    
</script>    
