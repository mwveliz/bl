{% extends 'base.html.twig' %}

{% block body %}
    <h1></h1>
<div class="page-container">
            <!-- BEGIN CONTENT -->
                    <div class="row">
                        <div class="col-md-6">
                            <a class="btn btn-success" href="{{ path('client_new') }}" ><span>Add</span></a>
                            <br><br>                            
                            <!-- BEGIN EXAMPLE TABLE PORTLET-->
                            <div class="portlet light bordered">
                                <div class="portlet-title">
                                    <div class="caption font-green">
                                        <i class="icon-settings font-green"></i>
                                        <span class="caption-subject bold uppercase">Clients</span>
                                    </div>
                                    <div class="tools"> </div>
                                </div>
                                <div class="portlet-body">
                                <table class="table table-striped table-bordered table-hover dt-responsive" width="100%" id="sample_2">
                                    <thead>
                                        <tr>
                                            <th class="all" width="10%">Dashboard</th>
                                            <th class="all" width="10%">View</th>
                                         
                                            <th>Name</th>
                                            <th>Lastname</th>
                                            <th>Email</th>
                                            
                                        </tr>
                                    </thead>
                                    <tbody>
                                    {% for client in clients %}
                                        <tr>
                                            <td>
                                                    <center>
                                                        <a href="{{path("altinv_dashboard",{ 'id': client.id} )}}"  param="{{ client.id }}" param2="{{ app.request.attributes.get('_controller') }}">
                                                            <i class="fa fa-line-chart fa-x"></i>
                                                        </a>       
                                                    </center>
                                                </td>
                                                <td>
                                                    <center>
                                                        <a href="#" class="a_show" param="{{ client.id }}" param2="{{ app.request.attributes.get('_controller') }}">
                                                            <i class="fa fa-search fa-x"></i>
                                                        </a>       
                                                    </center>
                                                </td>
                                               
                                            <td>{{ client.name }}</td>
                                            <td>{{ client.lastname }}</td>
                                            <td>{{ client.emailOne }}</td>
                                            
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>

                              </div>
                            </div>
                            <!-- END EXAMPLE TABLE PORTLET-->
                        </div>
                      
                                        
                                        
                        <div class="col-md-6" id="show">
                           
                        </div>     
                    </div>
            <!-- END CONTENT BODY -->
            
        </div>                                       
{% endblock %}
