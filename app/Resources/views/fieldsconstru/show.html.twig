{% extends 'base.html.twig' %}

{% block body %}
    <h1>FieldsConstru</h1>

    <table>
        <tbody>
            <tr>
                <th>Description</th>
                <td>{{ fieldsConstru.description }}</td>
            </tr>
            <tr>
                <th>Widget</th>
                <td>{{ fieldsConstru.widget }}</td>
            </tr>
            <tr>
                <th>Trackable</th>
                <td>{% if fieldsConstru.trackable %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ fieldsConstru.id }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('fieldsconstru_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('fieldsconstru_edit', { 'id': fieldsConstru.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
