{% extends 'base.html.twig' %}

{% block body %}
    <h1>DashboardItem</h1>

    <table>
        <tbody>
            <tr>
                <th>Description</th>
                <td>{{ dashboardItem.description }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ dashboardItem.id }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('dashboarditem_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('dashboarditem_edit', { 'id': dashboardItem.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
