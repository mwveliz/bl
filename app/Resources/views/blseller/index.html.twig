<script> 
     $(document).ready(function(){
        $('a.a_show').on('click',function(e) {
                    e.preventDefault();
                    var id_seller=$(this).attr("param");
                    $.ajax({
                        url: "{{ path('blseller_ajaxshow') }}",
                        data: 'id='+id_seller,
                        success: function(plantilla){
                            
                        $('#show').html(plantilla);    
                        }
                    });                    
    
                        
             }); 
        
    });
    
    
