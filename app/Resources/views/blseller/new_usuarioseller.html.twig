{% extends 'base.html.twig' %}
{% block page_title %}
    Seller
{% endblock %}

{% block page_description %}
    New Seller
{% endblock %}
{% block body %}
   <div class="row">
        <div class="col-md-6 ">
            <!-- BEGIN SAMPLE FORM PORTLET-->
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption font-red-sunglo">
                        <i class="fa fa-plus" style="color:#E26A6A;"></i>
                        <span class="caption-subject bold uppercase"> New Register</span>
                    </div>
                </div>
                <div class="portlet-body form">

                    {{ form_start(form) }}
                        {{ form_widget(form) }}
            
                 
                   <br>
                    <a id= "a_addaccount" class="btn btn-success pull-right" href="#" ><span>Add Account</span></a>
                    <br><br>
                    <button type="button" class="btn default"  id="clear">Clear</button>
                    <a href="{{ path('blseller_index') }}" class="btn red" role="button">Cancel</a>
                    <button type="submit" class="btn blue">Submit</button>
                    {{ form_end(form) }}
                    <br>
                    <div class="form-actions">
                    </div>
                </div>
            </div>
            <!-- END SAMPLE FORM PORTLET-->
        </div>
        <div class="col-md-6"  id="add">



        </div>
    </div>
    
{% endblock %}
 {% block stylesheets_extra %}
     <link href="{{ asset('/css/form.css') }}" rel="stylesheet" type="text/css" />
 {% endblock %}
 
 
{% block javascripts_extra %}
     <script type='text/javascript'>
         $( document ).ready(function() {
             $(".numeric").numeric({ decimal : ".",  negative : false, scale: 4 });
             $(".currency").maskMoney();

              $('#a_addaccount').on('click',function(e) {
                 e.preventDefault();
                 $('#add').load("{{ path('blseller_showaccounts') }}");
             });
             
             
                
         });
     </script>

{% endblock %}