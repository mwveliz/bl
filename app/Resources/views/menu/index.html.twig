{% extends 'base.html.twig' %}

{% block body %}
    <h1>Menu list</h1>

    <table>
        <thead>
            <tr>
                <th>Description</th>
                <th>Pos</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for menu in menus %}
            <tr>
                <td><a href="{{ path('menu_show', { 'id': menu.id }) }}">{{ menu.description }}</a></td>
                <td>{{ menu.pos }}</td>
                <td>{{ menu.id }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('menu_show', { 'id': menu.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('menu_edit', { 'id': menu.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('menu_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
