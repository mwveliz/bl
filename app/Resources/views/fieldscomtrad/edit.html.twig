{% extends 'base.html.twig' %}

{% block page_title %}
   Commodities Trading
{% endblock %} 

{% block page_description %}
   Fields of Commodities Trading
{% endblock %} 

{% block body %}
                     <div class="row">
                        <div class="col-md-6 ">
                            <!-- BEGIN SAMPLE FORM PORTLET-->
                            <div class="portlet light bordered">
                                <div class="portlet-title">
                                    <div class="caption font-red-sunglo">
                                        <i class="fa fa-pencil" style="color:#E26A6A;"></i>
                                        <span class="caption-subject bold uppercase"> Edit Register</span>
                                    </div>
                                </div>
                                <div class="portlet-body form">
                                        {{ form_start(edit_form) }}
                                            {{ form_widget(edit_form) }}
                                            <br>
                                            <button type="button" class="btn default"  id="clear">Clear</button>
                                            <a href="{{ path('fieldscomtrad_index') }}" class="btn red" role="button">Cancel</a>
                                            <button type="submit" class="btn blue">Submit</button>
                                        {{ form_end(edit_form) }}    
                                        <br>
                                        <div class="form-actions">                                          
                                        </div>
                                </div>
                            </div>
                            <!-- END SAMPLE FORM PORTLET-->
                        </div>
                        <div class="col-md-6 ">
                            
                        </div>
                    </div>   
 {% endblock %}           

 {% block stylesheets_extra %} 
         <link href="{{ asset('/css/form.css') }}" rel="stylesheet" type="text/css" />
 {% endblock %}
 
 {% block javascripts_extra %} 
 <script>    
    $( document ).ready(function() {
        $('#clear').click(function() {
          $('form[name="{{ edit_form.vars.name }}"]').trigger("reset");
          $('span').removeClass("checked"); 
        });
    });
 </script>
 {% endblock %}
