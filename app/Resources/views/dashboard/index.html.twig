{% extends 'base.html.twig' %}

{% block body %}
    <h1>Dashboard list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for dashboard in dashboards %}
            <tr>
                <td><a href="{{ path('dashboard_show', { 'id': dashboard.id }) }}">{{ dashboard.id }}</a></td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('dashboard_show', { 'id': dashboard.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('dashboard_edit', { 'id': dashboard.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('dashboard_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
