{% extends 'base.html.twig' %}

{% block body %}
    <h1>Alert list</h1>

    <table>
        <thead>
            <tr>
                <th>Description</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for alert in alerts %}
            <tr>
                <td><a href="{{ path('alert_show', { 'id': alert.id }) }}">{{ alert.description }}</a></td>
                <td>{{ alert.id }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('alert_show', { 'id': alert.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('alert_edit', { 'id': alert.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('alert_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
