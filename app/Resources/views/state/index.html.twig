{% extends 'base.html.twig' %}

{% block body %}
    <h1>State list</h1>

    <table>
        <thead>
            <tr>
                <th>Description</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for state in states %}
            <tr>
                <td><a href="{{ path('state_show', { 'id': state.id }) }}">{{ state.description }}</a></td>
                <td>{{ state.id }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('state_show', { 'id': state.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('state_edit', { 'id': state.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('state_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
